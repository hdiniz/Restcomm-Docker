#!/bin/bash
#Default ENV vars for Amazon AMI
#LOGS

EXTCONF_RESTCOMM_LOGS=/var/log/restcomm
EXTCONF_CORE_LOGS_LOCATION=restcomm_core
EXTCONF_RESTCOMM_TRACE_LOG=restcomm_trace
EXTCONF_MEDIASERVER_LOGS_LOCATION=media_server

#SSL certificate
RCADVCONF_SECURESSL=SELF
RCADVCONF_SSL_MODE=allowall
RCADVCONF_TRUSTSTORE_PASSWORD=changeme
RCADVCONF_TRUSTSTORE_ALIAS=restcomm


#RestComm Port configuration
RCBCONF_SIP_PORT_UDP=5060
RCBCONF_SIP_PORT_TCP=5060
RCBCONF_SIP_PORT_TLS=5061
RCBCONF_SIP_PORT_WS=5080
RCBCONF_SIP_PORT_WSS=8443
RCBCONF_HTTP_PORT=80
RCBCONF_HTTPS_PORT=443

#Functional configuration.
RMSCONF_MEDIA_LOW_PORT=55500
RMSCONF_MEDIA_HIGH_PORT=65500

#Log
RCBCONF_LOG_LEVEL=DEBUG
RCBCONF_AKKA_LOG_LEVEL=DEBUG
RCBCONF_LOG_LEVEL_COMPONENT_GOVNIST=DEBUG
RCBCONF_LOG_LEVEL_COMPONENT_SIPSERVLET=DEBUG
RCBCONF_LOG_LEVEL_COMPONENT_SIPRESTCOMM=DEBUG
RCBCONF_LOG_LEVEL_COMPONENT_RESTCOMM=DEBUG

#SMS
RCBCONF_SMS_PREFIX=''

#RVD_LOCATION
RCADVCONF_RVD_LOCATION=/var/restcomm/rvd/workspace

#HSQL-persist data - Need to mount this path on the host. else data is not persistent.
RCADVCONF_HSQL_DIR=/var/restcomm/data

#TTS - this is a free acount KEY - please create your personal key (http://www.voicerss.org/)
RCBCONF_VOICERSS_KEY=

RCADVCONF_SMTP_HOST=smtp.sendgrid.net
RCADVCONF_SMTP_USER=apikey
RCADVCONF_SMTP_PASSWORD=
